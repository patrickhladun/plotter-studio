{
  "name": "plotter-studio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "start": "bash scripts/start.sh",
    "dev": "bash scripts/start.sh",
    "dev:api": "bash -c 'source venv/bin/activate && uvicorn main:app --app-dir apps/api --reload --host 0.0.0.0 --port 2222'",
    "dev:dashboard": "pnpm --filter plotter-studio-dashboard dev",
    "build:dashboard": "pnpm --filter plotter-studio-dashboard build",
    "preview:dashboard": "pnpm --filter plotter-studio-dashboard preview",
    "lint:dashboard": "pnpm --filter plotter-studio-dashboard lint"
  },
  "dependencies": {
    "@types/node": "^24.6.2"
  }
}
